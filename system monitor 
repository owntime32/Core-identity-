from .rollback_manager import RollbackManager

class ControlPanelEntity:
    def __init__(self, core_id, db_path="cpe_archive.json"):
        ...
        self.rollback_manager = RollbackManager(db_path)

    def rollback_system(self, mode="previous_version"):
        config = self.rollback_manager.rollback(mode)
        if config:
            print("Rollback successful.")
        else:
            print("Rollback failed or unavailable.")
cpe.rollback_system(mode="secure_mode")        # Hardened config
cpe.rollback_system(mode="original_version")   # Clean slate
cpe.rollback_system(mode="previous_version")   # Last good state