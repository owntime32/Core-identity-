    def __init__(self, db_path="cpe_archive.json"):
        self.db_path = db_path

    def load_db(self):
        if not os.path.exists(self.db_path):
            return []
        with open(self.db_path, "r") as f:
            return json.load(f)

    def rollback(self, mode="previous_version"):
        archive = self.load_db()
        if not archive:
            print("No archived configurations available.")
            return None

        if mode == "previous_version":
            config = archive[-1]["fingerprints"]
            print("Rolling back to previous saved version.")
        elif mode == "original_version":
            config = archive[0]["fingerprints"]
            print("Rolling back to original clean slate.")
        elif mode == "secure_mode":
            config = self.generate_secure_config(archive[-1]["fingerprints"])
            print("Rolling back to secure hardened configuration.")
        else:
            print("Invalid rollback mode.")
            return None

        self.apply_config(config)
        return config

    def generate_secure_config(self, current):
        secure_config = current.copy()
        # Example: disable risky modules, enforce strict drivers
        secure_config["system_map"]["disabled_modules"] = ["telemetry", "third_party_plugins"]
        secure_config["decision"]["security_mode"] = "hardened"
        return secure_config

